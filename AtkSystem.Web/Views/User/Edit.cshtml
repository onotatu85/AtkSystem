@model AtkSystem.Web.Models.UserViewModel
@{
    ViewData["Title"] = "ユーザー編集";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="glass-card p-5">
            <h2 class="text-center mb-4 text-light">ユーザー編集</h2>

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="EmployeeId" /> <!-- ID is usually immutable -->

                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="EmployeeId" class="form-label text-secondary">社員ID</label>
                        <input asp-for="EmployeeId" class="form-control bg-dark text-white-50 border-secondary" disabled />
                    </div>
                    <div class="col-md-6">
                         <label asp-for="FullName" class="form-label text-secondary">氏名</label>
                        <input asp-for="FullName" class="form-control bg-transparent text-light border-secondary"
                               style="border-color: var(--glass-border);" />
                        <span asp-validation-for="FullName" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label text-secondary">パスワード (変更する場合のみ入力)</label>
                    <input asp-for="Password" class="form-control bg-transparent text-light border-secondary"
                           style="border-color: var(--glass-border);" placeholder="新しいパスワード" />
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="DepartmentId" class="form-label text-secondary">所属部署</label>
                        <select asp-for="DepartmentId" class="form-select bg-transparent text-light border-secondary" 
                                asp-items="ViewBag.Departments" style="border-color: var(--glass-border);">
                            <option value="">-- 選択してください --</option>
                        </select>
                         <span asp-validation-for="DepartmentId" class="text-danger small"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Role" class="form-label text-secondary">権限</label>
                        <select asp-for="Role" class="form-select bg-transparent text-light border-secondary"
                                asp-items="Html.GetEnumSelectList<AtkSystem.Core.Enums.Role>()" style="border-color: var(--glass-border);">
                        </select>
                         <span asp-validation-for="Role" class="text-danger small"></span>
                    </div>
                </div>

                <div class="mb-4 form-check form-switch">
                    <input class="form-check-input" type="checkbox" asp-for="IsActive" id="flexSwitchCheckDefault">
                    <label class="form-check-label text-light" for="flexSwitchCheckDefault">アカウントを有効にする</label>
                </div>

                <div class="d-flex justify-content-end gap-2">
                    <a asp-action="Index" class="btn btn-outline-light">キャンセル</a>
                    <button type="submit" class="btn btn-premium px-4">保存</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
