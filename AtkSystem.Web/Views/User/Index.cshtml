@model IEnumerable<AtkSystem.Core.Entities.User>
@{
    ViewData["Title"] = "ユーザー管理";
}

<div class="row justify-content-center">
    <div class="col-lg-12">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h2 class="text-light">ユーザー管理</h2>
            <a asp-action="Create" class="btn btn-premium">
                <i class="bi bi-person-plus me-2"></i>新規登録
            </a>
        </div>

        <div class="glass-card p-4">
            <div class="table-responsive">
                <table class="table table-premium align-middle mb-0">
                    <thead>
                        <tr>
                            <th>有効</th>
                            <th>社員ID</th>
                            <th>氏名</th>
                            <th>所属</th>
                            <th>権限</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="@(item.IsActive ? "" : "text-muted")">
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <i class="bi bi-check-circle-fill text-success"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-slash-circle text-secondary"></i>
                                    }
                                </td>
                                <td>@item.EmployeeId</td>
                                <td>
                                    <div class="fw-bold">@item.FullName</div>
                                </td>
                                <td>@(item.Department?.Name ?? "-")</td>
                                <td>
                                    @if (item.Role == AtkSystem.Core.Enums.Role.Admin)
                                    {
                                        <span class="badge bg-danger">管理者</span>
                                    }
                                    else if (item.Role == AtkSystem.Core.Enums.Role.Manager)
                                    {
                                        <span class="badge bg-warning text-dark">マネージャー</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-info text-dark">一般</span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-light">
                                        <i class="bi bi-pencil"></i> 編集
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
